<MenuBar>
	<Menu name="Eniac">
		<Menu name="About Eniac" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Eniac" shell="win -c"/>
	</Menu>
	<Menu name="File">
		<Menu name="New" click="new-file" hotkey="alt+n"/>
		<Menu name="Open&#8230;" click="open-file" hotkey="alt+o"/>
		<Menu type="divider"/>
		<Menu name="Save" click="save-file" hotkey="alt+s"/>
		<Menu name="Save as&#8230;" hotkey="alt+shift+s" click="save-file-as"/>
		<Menu type="divider"/>
		<Menu name="Close File"/>
	</Menu>
	<Menu name="Edit">
		<Menu name="Undo" click="history-undo" hotkey="meta+z"/>
		<Menu name="Redo" click="history-redo" hotkey="meta+shift+z"/>
		<Menu type="divider"/>
		<Menu name="Cut"/>
		<Menu name="Copy"/>
		<Menu name="Paste"/>
		<Menu name="Select All" click="select-all" arg="selectAll" hotkey="meta+a"/>
	</Menu>
	<Menu name="Table">
		<Menu name="Header Rows&#8230;" for="table-header-rows">
			<Menu name="0" is-checked="1"/>
			<Menu name="1"/>
			<Menu name="2"/>
			<Menu name="3"/>
			<Menu name="4"/>
			<Menu name="5"/>
			<Menu type="divider"/>
			<Menu name="Freeze Header Rows" is-checked="1"/>
		</Menu>
		<Menu name="Header Columns&#8230;" for="table-header-columns">
			<Menu name="0" is-checked="1"/>
			<Menu name="1"/>
			<Menu name="2"/>
			<Menu name="3"/>
			<Menu name="4"/>
			<Menu name="5"/>
			<Menu type="divider"/>
			<Menu name="Freeze Header Columns" is-checked="1"/>
		</Menu>
		<Menu name="Footer Columns&#8230;" for="table-footer-rows">
			<Menu name="0" is-checked="1"/>
			<Menu name="1"/>
			<Menu name="2"/>
			<Menu name="3"/>
			<Menu name="4"/>
			<Menu name="5"/>
			<Menu type="divider"/>
			<Menu name="Freeze Footer Rows" is-checked="1"/>
		</Menu>
	</Menu>
	<Menu name="View">
		<Menu name="Zoom In"/>
		<Menu name="Zoom Out"/>
		<Menu name="Zoom&#8230;" for="view-zoom">
			<Menu name="75%"/>
			<Menu name="100%"/>
			<Menu name="125%"/>
			<Menu name="150%"/>
			<Menu name="200%"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Hide Toolbar"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Send Numbers Feedback"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>

	<Menu for="tool-cols">
		<Menu name="Sort Ascending"/>
		<Menu name="Sort Descending"/>
		<Menu type="divider"/>
		<Menu name="Add Column Before"/>
		<Menu name="Add Column After"/>
		<Menu type="divider"/>
		<Menu name="Delete Column"/>
	</Menu>

	<Menu for="tool-rows">
		<Menu name="Add Row Above"/>
		<Menu name="Add Row Below"/>
		<Menu type="divider"/>
		<Menu name="Delete Row"/>
	</Menu>
</MenuBar>