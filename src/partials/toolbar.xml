<ToolBar>
	<Group width="30%">
		<Options>
			<Tool symbol="icon-undo" click="history-undo" state="disabled"/>
			<Tool symbol="icon-redo" click="history-redo" state="disabled"/>
		</Options>
		<!-- <Tool symbol="icon-sidebar"/> -->
		<Select name="100%" width="35" menu="view-zoom"></Select>
	</Group>
	<Group width="40%" align="center">
		<Tool symbol="icon-formula" click="popup-view-options" arg="formula"/>
		<Tool symbol="icon-table" click="popup-view-options" arg="grid"/>
		<Tool symbol="icon-chart" click="popup-view-options" arg="chart"/>
		<Tool symbol="icon-text" click="insert-text-box"/>
		<Tool symbol="icon-shape" click="popup-view-options" arg="shape"/>
		<Tool symbol="icon-image" click="popup-view-options" arg="image"/>
	</Group>
	<Group width="30%">
		<Tool symbol="icon-format" state="active1" click="toggle-sidebar"/>
	</Group>
</ToolBar>